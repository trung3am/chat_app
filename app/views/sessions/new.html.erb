<h4 class="ui center aligned medium icon header">
   Welcome to Private Chat App
  <i class="circular purple power icon"></i>
  Login or Sign up to continue
</h4>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">

      <%= form_for(:session, html: {class: "ui form", role: "form"}, url: login_path) do |f| %>
        <div class="field">
            <h4 class ="center aligned"> Log in </h4>
          <%= f.label :username, "Username" %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "Username"%>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password, "Password" %>
          <div class="ui left icon input">
            <%= f.password_field :password, placeholder:"pwd" %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.button "Login" , class: "ui purple submit button" %>
        
      <% end %>
    </div>
    <div class="middle aligned column">
      <%= form_for(:user, html: {class: "ui form", role: "form"}, url: signup_path) do |f| %>
        <div class="field">
            <h4 class ="center aligned"> Sign up here </h4>
          <%= f.label :username, "Username" %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "Username"%>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password, "Password" %>
          <div class="ui left icon input">
            <%= f.password_field :password, placeholder:"pwd" %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.button "Sign up" , class: "ui purple submit button" %>
        
      <% end %>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>